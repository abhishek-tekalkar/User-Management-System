<% include('../layouts/header.ejs') %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


    <div class="container text-center my-3">


        <p class="h2 text-primary fw-bold">
            Welcome, <span class="text-secondary">
                <%= user.name %>
            </span>
        </p>


        <img src="userImages/<%= user.image %>" height="250px" width="250px" alt="<%= user.image %>" class="my-3" >

        <table class="table  my-3 mx-5 ">

            <tr class="table-info ">
                <td class="fw-bold">Email :-</td>
                <td>
                    <%= user.email %>
                </td>
            </tr>
            <tr class="table-info">
                <td class="fw-bold">Mobile no :-</td>
                <td>
                    <%= user.mobile %>
                </td>
            </tr>
            <tr class="table-success">
                <td class="fw-bold">Verification :- </td>
                <td>
                    <% if (user.is_varified==1) { %>
                        <p>verified</p>
                        <% } %>
                </td>
            </tr>
        </table>


        <!-- buttons  -->
        <div class="conatiner col text-center">

            <div class="row">

                <div class="col-6"><a href="/edit?id=<%= user._id %>" class="btn btn-info my-1 col-6">Edit</a> </div>

                <div class="col-6"><a href="/logout" class="btn btn-danger my-1 col-6">Logout</a></div>

            </div>
        </div>
        <!-- <a href="/edit?id=<%= user._id %>" class="btn btn-info my-1 col-6">Edit</a>
        <br>
        <a href="/logout" class="btn btn-danger my-1 col-6">Logout</a> -->


    </div>
    <% include('../layouts/footer.ejs') %>