<% include('../layouts/header.ejs') %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <div class="container text-center ">

        <p class="h1 text-primary my-3 fw-bold">Please login </p>
       
                <form action="/login" method="post">
                    <input type="email" name="email" required placeholder="Enter email">
                    <br><br>
                    <input type="password" name="password" required placeholder="Enter password">
                    <br><br>
                    <% if (typeof message !=='undefined' ) { %>
                        <p class="h5 text-danger">

                            <%= message %>
                        </p>
                            
                        <% } %>
                        <br>
                    <input type="submit" class="btn btn-success" value="login">
                    <a href="/forget" class="btn btn-danger">forget password</a>

                </form>

                <p class="h5">New user ?</p>
                <a href="/register"><span class="btn btn-success">Register</span> </a>


                <a href="/verification" class="btn btn-dark">Verify E-mail</a>






    </div>


