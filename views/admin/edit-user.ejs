<% include('../layouts/header.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <div class="container text-center my-3">

<p class="h1 text-primary fw-bold">Edit User</p>

<form action="" method="POST">

    <input type="name" name="name" placeholder="Enter Name" value="<%= user.name %>" required>
    <br><br>
    <input type="email" name="email" placeholder="Enter Email" value="<%= user.email %>" required>
    <br><br>
    <input type="text" name="mno" placeholder="Enter Mobile" value="<%= user.mobile %>" required>
    <br><br>
    <label> Verified </label>
    <input type="radio" name="verify" value="1" <% if(user.is_varified == 1){ %> checked <% } %> >
    <label> Unverified </label>
    <input type="radio" name="verify" value="0" <% if(user.is_varified == 0){ %> checked <% } %>>
    <br><br>
    <input type="hidden" name="id" value="<%= user._id %>">
    <input type="submit" value="Update User" class="btn btn-success">

    <a href="/admin/" class="btn btn-primary">Go Dashboard</a>
</form>

</div>
<% include('../layouts/footer.ejs') %>